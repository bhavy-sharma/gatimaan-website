<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gatiman</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- AOS CSS -->
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <!-- Custom Styles -->
   <link rel="stylesheet" href="/css/boilerplate.css">
  <link rel="stylesheet" href="/css/scroll.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/course-card.css">
   <link rel="stylesheet" href="/css/news.css">
  <link rel="stylesheet" href="/css/feed.css">
  <link rel="stylesheet" href="/css/horizontal_scroll.css">
  <link rel="stylesheet" href="/css/testimonial.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/course-view.css">
  <script src="https://cdn.tailwindcss.com"></script> 
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


  <style>
      body {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  height: auto;
}

@media screen and (max-width: 600px) {
  body {
    min-height: 100vh;
    height: auto; 
  }
}

@media screen and (min-width: 601px) {
  body {
    height: auto; 
  }
}
.hamburger{
  margin-left: 110px !important;
}
  </style>
</head>

<body>
  <!-- Header -->
  <%- include("../components/Header.ejs") %>

    <!-- Carousel -->
    <%- include("../components/carousel.ejs") %>


      <!-- üéì Courses Section Start -->
      <section class="courses-section py-5 bg-white">
        <div class="container">
          <h2 class="text-center mb-5 display-5 fw-bold text-primary des">üéì Explore Our Courses</h2>

          <% if (courses && courses.length> 0) { %>
            <div class="row g-4 des">
              <% courses.slice(0, 6).forEach(function(course, index) { %>
                <div class="col-md-4 col-sm-6 des" data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
                  <div class="card h-100 shadow-sm course-card border-0 overflow-hidden">
                    <img src="<%= course.imageUrl || 'https://placehold.co/600x400' %>" class="card-img-top"
                      alt="<%= course.title %>">

                    <div class="card-body d-flex flex-column text-center tracking-tighter">
                      <h5 class="card-title">
                        <%= course.title %>
                      </h5>
                      <p class="card-text flex-grow-1">
                        <%= course.shortDescription %>
                      </p>
                      <a href="/courses/<%= course._id %>" class="btn btn-outline-primary mt-auto w-100">
                        Read More
                      </a>
                    </div>
                  </div>
                </div>
                <% }) %>
            </div>

            <!-- Explore More Button -->
            <div class="text-center mt-5">
              <a href="/layout/courses" class="btn btn-lg btn-success des">Explore More Courses</a>
            </div>
            <% } else { %>
              <div class="alert alert-info text-center mt-4 des">
                No courses available yet.
              </div>
              <% } %>
        </div>
      </section>
      <!-- üéì Courses Section End -->


      <!-- for background image  -->
      <section style="background-color:azure;">

        <!-- üì∞ News Section Start -->
        <section class="news-section py-5">
          <div class="container">
            <h2 class="mb-5 text-center display-5 fw-bold text-success des">üì∞ Latest Updates</h2>

            <div class="row g-4">
              <!-- Admit Card -->
              <div class="col-md-6 col-lg-4 des">
                <div class="news-card card h-100 shadow-sm border-0 d-flex flex-column">
                  <div class="card-body bg-white rounded flex-grow-1 d-flex flex-column">
                    <h4 class="card-title text-success mb-3 des">üé´ Admit Card</h4>
                    <ul class="list-group list-group-flush flex-grow-1 des">
                      <% if (admitCards && admitCards.length> 0) { %>
                        <% admitCards.slice(0, 10).forEach(news=> { %>
                          <li class="list-group-item">
                            <a href="/news/Admit%20Card" class="text-decoration-none text-dark fw-medium des">
                              <%= news.title %>
                            </a>
                          </li>
                          <% }) %>
                            <% } else { %>
                              <li class="list-group-item text-muted des">No updates yet.</li>
                              <% } %>
                    </ul>
                  </div>
                  <div class="card-footer bg-transparent border-0 des">
                    <a href="/news/Admit%20Card" class="btn btn-outline-success w-100">View More</a>
                  </div>
                </div>
              </div>

              <!-- Admission -->
              <div class="col-md-6 col-lg-4 des">
                <div class="news-card card h-100 shadow-sm border-0 d-flex flex-column">
                  <div class="card-body bg-white rounded flex-grow-1 d-flex flex-column">
                    <h4 class="card-title text-primary mb-3">üè´ Admission</h4>
                    <ul class="list-group list-group-flush flex-grow-1">
                      <% if (admissions && admissions.length> 0) { %>
                        <% admissions.slice(0, 10).forEach(news=> { %>
                          <li class="list-group-item">
                            <a href="/news/Admission" class="text-decoration-none text-dark fw-medium">
                              <%= news.title %>
                            </a>
                          </li>
                          <% }) %>
                            <% } else { %>
                              <li class="list-group-item text-muted">No updates yet.</li>
                              <% } %>
                    </ul>
                  </div>
                  <div class="card-footer bg-transparent border-0">
                    <a href="/news/Admission" class="btn btn-outline-primary w-100">View More</a>
                  </div>
                </div>
              </div>

              <!-- Result -->
              <div class="col-md-6 col-lg-4 des">
                <div class="news-card card h-100 shadow-sm border-0 d-flex flex-column">
                  <div class="card-body bg-white rounded flex-grow-1 d-flex flex-column">
                    <h4 class="card-title text-danger mb-3">üì¢ Result</h4>
                    <ul class="list-group list-group-flush flex-grow-1">
                      <% if (results && results.length> 0) { %>
                        <% results.slice(0, 10).forEach(news=> { %>
                          <li class="list-group-item">
                            <a href="/news/Result" class="text-decoration-none text-dark fw-medium">
                              <%= news.title %>
                            </a>
                          </li>
                          <% }) %>
                            <% } else { %>
                              <li class="list-group-item text-muted">No updates yet.</li>
                              <% } %>
                    </ul>
                  </div>
                  <div class="card-footer bg-transparent border-0">
                    <a href="/news/Result" class="btn btn-outline-danger w-100">View More</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- üì∞ News Section End -->





        <!-- üìù feed section Start -->
        <%- include("../components/feed.ejs") %>
          <!-- üìù feed Section End -->



          <!-- üìù Horizontal Scriolling section Start -->
          <%- include("../components/horizontal_Scrolling.ejs") %>
            <!-- üìù Horizontal Scriolling Section End -->
            <br> <br> <br>

      </section>

      <!-- üìù Testimonial Section Start -->
      <%- include("../components/testimonial.ejs") %>
        <!-- üìù Testimonial Section End -->

        
        <!-- Whatsapp -->
        <%- include("../components/whatsappIcon.ejs") %>
          <!--Whatsapp End-->

        <!-- Footer -->
        <%- include("../components/Footer.ejs") %>
          <!-- Footer End-->

          <!-- Scripts -->
          <script src="./js/scroll.js"></script>
          <script src="/js/carousel.js"></script>
          <script src="/js/feed.js"></script>
          <script src="/js/blur.js"></script>
          <!-- AOS JS -->
          <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
          <script>
            AOS.init({
              duration: 800,
              once: true,
            });
          </script>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


          
</body>

</html>