<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Courses</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- AOS CSS -->
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/carousel.css">
  <link rel="stylesheet" href="/css/course-card.css">
  <link rel="stylesheet" href="/css/testimonial.css">
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <!-- Header -->
  <%- include("../components/Header.ejs") %>

  <!-- Carousel -->
  <%- include("../components/carousel.ejs") %>

  <!-- ğŸ“° News Section Start -->
  <section class="news-section py-5">
    <div class="container">
      <h2 class="mb-5 text-center display-5 fw-bold text-primary">ğŸ“° Latest Updates</h2>

      <div class="row g-4">
        <!-- Admit Card -->
        <div class="col-md-6 col-lg-4">
          <div class="news-card card h-100 shadow-sm border-0 d-flex flex-column">
            <div class="card-body bg-white rounded flex-grow-1 d-flex flex-column">
              <h4 class="card-title text-success mb-3">ğŸ« Admit Card</h4>
              <ul class="list-group list-group-flush flex-grow-1">
                <% if (admitCards && admitCards.length > 0) { %>
                  <% admitCards.slice(0, 10).forEach(news => { %>
                    <li class="list-group-item">
                      <a href="/news/Admit%20Card" class="text-decoration-none text-dark fw-medium"><%= news.title %></a>
                    </li>
                  <% }) %>
                <% } else { %>
                  <li class="list-group-item text-muted">No updates yet.</li>
                <% } %>
              </ul>
            </div>
            <div class="card-footer bg-transparent border-0">
              <a href="/news/Admit%20Card" class="btn btn-outline-success w-100">View More</a>
            </div>
          </div>
        </div>

        <!-- Admission -->
        <div class="col-md-6 col-lg-4">
          <div class="news-card card h-100 shadow-sm border-0 d-flex flex-column">
            <div class="card-body bg-white rounded flex-grow-1 d-flex flex-column">
              <h4 class="card-title text-primary mb-3">ğŸ« Admission</h4>
              <ul class="list-group list-group-flush flex-grow-1">
                <% if (admissions && admissions.length > 0) { %>
                  <% admissions.slice(0, 10).forEach(news => { %>
                    <li class="list-group-item">
                      <a href="/news/Admission" class="text-decoration-none text-dark fw-medium"><%= news.title %></a>
                    </li>
                  <% }) %>
                <% } else { %>
                  <li class="list-group-item text-muted">No updates yet.</li>
                <% } %>
              </ul>
            </div>
            <div class="card-footer bg-transparent border-0">
              <a href="/news/Admission" class="btn btn-outline-primary w-100">View More</a>
            </div>
          </div>
        </div>

        <!-- Result -->
        <div class="col-md-6 col-lg-4">
          <div class="news-card card h-100 shadow-sm border-0 d-flex flex-column">
            <div class="card-body bg-white rounded flex-grow-1 d-flex flex-column">
              <h4 class="card-title text-danger mb-3">ğŸ“¢ Result</h4>
              <ul class="list-group list-group-flush flex-grow-1">
                <% if (results && results.length > 0) { %>
                  <% results.slice(0, 10).forEach(news => { %>
                    <li class="list-group-item">
                      <a href="/news/Result" class="text-decoration-none text-dark fw-medium"><%= news.title %></a>
                    </li>
                  <% }) %>
                <% } else { %>
                  <li class="list-group-item text-muted">No updates yet.</li>
                <% } %>
              </ul>
            </div>
            <div class="card-footer bg-transparent border-0">
              <a href="/news/Result" class="btn btn-outline-danger w-100">View More</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ğŸ“° News Section End -->

<!-- ğŸ“ Courses Section Start -->
<section class="courses-section py-5 bg-white">
  <div class="container">
    <h2 class="text-center mb-5 display-5 fw-bold text-primary">ğŸ“ Explore Our Courses</h2>

    <% if (courses && courses.length > 0) { %>
      <div class="row g-4">
        <% courses.slice(0, 6).forEach(function(course, index) { %>
          <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
            <div class="card h-100 shadow-sm course-card border-0 overflow-hidden">
              <img src="<%= course.imageUrl || 'https://placehold.co/600x400' %>" class="card-img-top" alt="<%= course.title %>">

              <div class="card-body d-flex flex-column text-center tracking-tighter">
                <h5 class="card-title"><%= course.title %></h5>
                <p class="card-text flex-grow-1"><%= course.shortDescription %></p>
                <a href="/courses/<%= course._id %>" class="btn btn-outline-primary mt-auto w-100">
                  Read More
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Explore More Button -->
      <div class="text-center mt-5">
        <a href="/courses" class="btn btn-lg btn-success">Explore More Courses</a>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center mt-4">
        No courses available yet.
      </div>
    <% } %>
  </div>
</section>
<!-- ğŸ“ Courses Section End -->

  <!-- ğŸ“ Testimonial Section Start -->
  <%- include("../components/testimonial.ejs") %>
  <!-- ğŸ“ Testimonial Section End -->

  <!-- Footer -->
  <%- include("../components/Footer.ejs") %>

  <!-- Scripts -->
  <script src="/js/carousel.js"></script>
  <!-- AOS JS -->
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script> 
  <script>
    AOS.init({
      duration: 800,
      once: true,
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>