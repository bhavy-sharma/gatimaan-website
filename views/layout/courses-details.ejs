<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= course.title %> - Details</title>
  <script src="https://cdn.tailwindcss.com"></script>    
</head>
<body class="bg-gray-100 min-h-screen font-sans">

  <section class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Left Column -->
      <div>
        <!-- Title of Course -->
        <h1 class="text-3xl sm:text-4xl font-bold mb-6"><%= course.title %></h1>

        <!-- Description of Course -->
        <p class="text-gray-700 mb-6"><%= course.longDescription %></p>

        <!-- Basic Description of Course -->
        <div class="bg-white p-4 rounded shadow-md mb-6">
          <h2 class="text-xl font-semibold mb-2">Basic Description</h2>
          <p class="text-gray-700"><%= course.basicDescription %></p>
        </div>

        <!-- Admission Process -->
        <div class="bg-white p-4 rounded shadow-md mb-6">
          <h2 class="text-xl font-semibold mb-2">Admission Process</h2>
          <p class="text-gray-700"><%= course.admissionProcess %></p>
        </div>

        <!-- Subjects -->
        <div class="bg-white p-4 rounded shadow-md">
          <h2 class="text-xl font-semibold mb-2">Subjects of This Course</h2>
          <ul class="list-disc pl-6">
            <% course.subjects.forEach(subject => { %>
              <li><%= subject %></li>
            <% }) %>
          </ul>
        </div>
      </div>

      <!-- Right Column -->
      <div>
        <!-- Image -->
        <img 
          src="<%= course.imageUrl || 'https://placehold.co/600x400'  %>" 
          alt="<%= course.title %>" 
          class="w-full h-64 object-cover rounded-lg shadow-md mb-6"
        >

        <!-- WhatsApp Button -->
        <div class="bg-white p-4 rounded shadow-md">
          <h2 class="text-xl font-semibold mb-2">WhatsApp Us</h2>
          <a href="https://wa.me/<%=  course.whatsappNumber %>" target="_blank" class="block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            Open WhatsApp
          </a>
        </div>
      </div>
    </div>

    <!-- Back Button -->
    <a href="/courses" class="mt-6 inline-block bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition">
      Back to Courses
    </a>
  </section>

</body>
</html>